<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AddItemTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">#dbdbdb</item>
    </style>

    <style name="ZeplinTextStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily"> sans-serif-medium</item>
        <item name="android:textColor"> @color/blue_background_text_color</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ZeplinRegular" parent="TextAppearance.AppCompat">
        <item name="fontFamily"> sans-serif-medium</item>
        <item name="android:textColor">#666664</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoftButton" parent="TextAppearance.AppCompat.Button">
        <item name="textAllCaps">true</item>
        <item name="fontFamily"> sans-serif-medium</item>
        <item name="android:textColor"> @color/light_accent_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/loft_button_background</item>
    </style>

</resources>
